<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Preference
        app:key="feedback"
        app:summary="Contact the developers to give feedback!"
        app:title="Send feedback">

    </Preference>

    <SwitchPreference
    app:key="pictures"
    app:title="Disable Book Covers"
    app:defaultValue="false"
    app:summaryOff="Off"
    app:summaryOn="On">
</SwitchPreference>

    <SwitchPreference
        app:key="refresh"
        app:title="New Categories"
        app:defaultValue="false"
        app:summaryOff="Once Per Launch"
        app:summaryOn="Always">
    </SwitchPreference>


</PreferenceScreen>