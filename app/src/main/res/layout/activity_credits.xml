<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".creditsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="246dp"
                android:layout_height="224dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin"
                android:layout_marginBottom="@dimen/margin"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/whiteColor"
                android:background="@color/colorPrimary"
                android:textSize="30sp"
                android:text="Developers" />

            <TextView
                android:layout_marginTop="@dimen/margin"
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="Izaac Lucas" />
            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin"
                android:text="Yonis Sheekh" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/whiteColor"
                android:background="@color/colorPrimary"
                android:textSize="30sp"
                android:text="Resources used" />
            <TextView
                android:layout_marginTop="@dimen/margin"
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="Picasso Library" />
            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="Material Desgin" />
            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin"
                android:text="Shimmer Library" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/whiteColor"
                android:background="@color/colorPrimary"
                android:textSize="30sp"
                android:text="Links" />
            <TextView
                android:layout_marginTop="@dimen/margin"
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="https://square.github.io/picasso/" />
            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="https://material.io/design/" />
            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="https://facebook.github.io/shimmer-android/" />
        </LinearLayout>
    </ScrollView>



</LinearLayout>